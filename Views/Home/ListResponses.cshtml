@{
}

@model IEnumerable<Party.Models.Invited>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Хора, които ще присъстват на партито
            </h2>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> Име </th>
                    <th> Имейл </th>
                    <th> Телефон </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Invited invited in Model)
                {
                    @if (invited.WillPresent == "Да, ще дойда!")
                    {
                        <tr>
                            <td width="33%">@invited.Name</td>
                            <td width="33%">@invited.Email</td>
                            <td width="33%">@invited.PhoneNumber</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
</div>
